<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Unify" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/pink_500</item>
        <item name="colorSecondaryVariant">@color/gray_300</item>
        <item name="colorOnSecondary">@color/graphite</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/graphite</item>
        <!-- Customize your theme here. -->
        <item name="colorOnSurface">@color/graphite</item>
        <item name="colorSurface">@color/white</item>
        <item name="colorOnPrimarySurface">@color/gray_05</item>

    </style>
</resources>