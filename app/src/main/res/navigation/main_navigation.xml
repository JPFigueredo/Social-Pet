<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation.xml"
    app:startDestination="@id/loginFragment">

    <fragment
        android:id="@+id/loginFragment"
        android:name="vortex.project.unify.Views.Fragment.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >
        <action
            android:id="@+id/action_loginFragment_to_postFragment"
            app:destination="@id/home_dest" />
        <action
            android:id="@+id/action_loginFragment_to_forgotPasswordFragment"
            app:destination="@id/forgotPasswordFragment" />
        <action
            android:id="@+id/action_loginFragment_to_regEmailFragment"
            app:destination="@id/regEmail" />
    </fragment>
    <fragment
        android:id="@+id/home_dest"
        android:name="vortex.project.unify.Views.Fragment.Main.PostFragment"
        android:label="Posts"
        tools:layout="@layout/fragment_post" >
        <action
            android:id="@+id/action_home_dest_to_profile_dest"
            app:destination="@id/profile_dest" />
    </fragment>
    <fragment
        android:id="@+id/forgotPasswordFragment"
        android:name="vortex.project.unify.Views.Fragment.ForgotPasswordFragment"
        android:label="fragment_preferences"
        tools:layout="@layout/fragment_forgot_password" />
    <fragment
        android:id="@+id/nav_preferences"
        android:name="vortex.project.unify.Views.Fragment.Main.PreferencesFragment"
        android:label="Preferences"
        tools:layout="@layout/fragment_preferences" />
    <fragment
        android:id="@+id/profile_dest"
        android:name="vortex.project.unify.Views.Fragment.Main.ProfileFragment"
        android:label="Profile"
        tools:layout="@layout/fragment_profile" >
        <action
            android:id="@+id/action_profile_dest_to_home_dest"
            app:destination="@id/home_dest" />
    </fragment>
    <fragment
        android:id="@+id/regEmail"
        android:name="vortex.project.unify.Views.Fragment.Register.RegEmailFragment"
        android:label="fragment_reg_email"
        tools:layout="@layout/fragment_reg_email" >
        <action
            android:id="@+id/action_reg_email_to_reg_phone"
            app:destination="@id/regPhone" />
    </fragment>
    <fragment
        android:id="@+id/regPhone"
        android:name="vortex.project.unify.Views.Fragment.Register.RegPhoneFragment"
        android:label="fragment_reg_phone"
        tools:layout="@layout/fragment_reg_phone" >
        <action
            android:id="@+id/action_reg_phone_to_reg_password"
            app:destination="@id/regPassword" />
    </fragment>
    <fragment
        android:id="@+id/regPassword"
        android:name="vortex.project.unify.Views.Fragment.Register.RegPasswordFragment"
        android:label="fragment_reg_password"
        tools:layout="@layout/fragment_reg_password" >
        <action
            android:id="@+id/action_reg_password_to_login"
            app:destination="@id/loginFragment" />
    </fragment>
    <fragment
        android:id="@+id/nav_myPets"
        android:name="vortex.project.unify.Views.Fragment.Main.MyPetsFragment"
        android:label="My Pets"
        tools:layout="@layout/fragment_my_pets" />
    <fragment
        android:id="@+id/likes_dest"
        android:name="vortex.project.unify.Views.Fragment.Main.LikesFragment"
        android:label="Likes"
        tools:layout="@layout/fragment_likes" />
    <fragment
        android:id="@+id/search_dest"
        android:name="vortex.project.unify.Views.Fragment.Main.SearchFragment"
        android:label="Search"
        tools:layout="@layout/fragment_search" />
    <fragment
        android:id="@+id/new_fallowers_dest"
        android:name="vortex.project.unify.Views.Fragment.Main.NewFallowersFragment"
        android:label="Fallowers"
        tools:layout="@layout/fragment_new_fallowers" />
</navigation>